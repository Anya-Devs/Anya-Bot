services:
  - type: web
    name: discord-bot
    env: python
    buildCommand: "pip install -r requirements.txt"
    startCommand: "python main.py"
    envVars:
      - key: TOKEN
        value: ${TOKEN}
    branch: main
    repo: https://github.com/Anya-Devs/Anya-Bot.git
    pullRequestPreviews: false
    autoDeploy: true
    restartPolicy: always
    port: 8080  # Add a port for the web service
